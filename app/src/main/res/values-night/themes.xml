<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EAPI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray4</item>
        <item name="colorSecondaryVariant">@color/gray4</item>


        <!-- <item name="android:fitsSystemWindows">true</item> -->
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>

        <item name="colorOnSecondary">@color/gray4</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Text -->
        <item name="android:textColorPrimary">@color/text_dark_primary</item>
        <item name="android:textColorSecondary">@color/textsec_dark_primary</item>
    </style>
    <style name="ti" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorAccent">@color/gray4</item>
        <item name="colorControlNormal">@color/gray4</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="boxStrokeWidthFocused">3dp</item>
        <item name="boxStrokeColor">@color/white</item> <!-- -->
        <item name="hintTextColor">@color/white</item>

        <item name="colorControlHighlight">#4CAF50</item>
        <item name="colorControlActivated">#FFFFFF</item>
    </style>
</resources>